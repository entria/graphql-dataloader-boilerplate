{
  "name": "graphql-dataloader-boilerplate",
  "description": "GraphQL DataLoader boilerplate",
  "version": "0.0.1",
  "dependencies": {
    "@entria/graphql-mongoose-loader": "^1.8.2",
    "babel-polyfill": "^6.26.0",
    "bcryptjs": "^2.4.3",
    "dataloader": "^1.4.0",
    "dotenv-safe": "^6.0.0",
    "graphql": "^0.13.2",
    "graphql-redis-subscriptions": "^1.5.0",
    "graphql-relay": "^0.5.5",
    "graphql-yoga": "^1.14.12",
    "idempotent-babel-polyfill": "^6.26.0",
    "isomorphic-fetch": "^2.2.1",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.2.4"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "22.4.3",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^4.14.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-react": "^7.10.0",
    "eslint-plugin-standard": "^3.1.0",
    "esm": "^3.0.5",
    "flow-bin": "^0.66.0",
    "husky": "^0.14.3",
    "jest": "22.4.3",
    "jest-cli": "22.4.3",
    "lint-staged": "6.0.0",
    "mongodb-memory-server": "^1.7.3",
    "nodemon": "^1.17.1",
    "prettier": "^1.11.1",
    "repl": "^0.1.3",
    "repl-promised": "^0.1.0",
    "repl.history": "^0.1.4",
    "rimraf": "^2.6.2"
  },
  "jest": {
    "testEnvironment": "<rootDir>/test/environment/mongodb",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "./dist"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "coverageDirectory": "./coverage/",
    "resetModules": true
  },
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/entria/graphql-dataloader-boilerplate"
  },
  "lint-staged": {
    "*.js": [
      "prettier --print-width 80 --no-semi --single-quote --trailing-comma es5 --write src/**/*.js",
      "git add"
    ]
  },
  "scripts": {
    "build": "npm run clear && babel src --ignore *.spec.js --out-dir dist --copy-files",
    "clear": "rimraf ./dist",
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "lint": "eslint src/**",
    "precommit": "lint-staged",
    "repl": "nodemon --config ./repl/nodemon.json ./repl.js --exec babel-node",
    "start": "node dist/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch --coverage",
    "update-schema": "babel-node ./scripts/updateSchema.js",
    "watch": "nodemon src/index.js --exec babel-node"
  }
}
