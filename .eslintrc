{
  "extends": "airbnb-base",
  "parser": "babel-eslint",
  "rules": {
    "generator-star-spacing": 0,
    "max-len": [1, 120, 2],
    "no-console": 0,
    "no-continue": 0,
    "no-param-reassign": [2, { "props": false }],
    "no-shadow": ["error", { "allow": ["dataloaders"] }],
    "no-underscore-dangle": 0,
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
  },
  "env": {
    "jest": true
  }
}
